{
    "name": "",
    "version": "0.0.0",
    "description": "Common configuration files used across projects.",
    "files": [
        "dist/**/*"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "copy-swc-config": "shx cp node_modules/@nyce/config/.swcrc .swcrc",
        "build": "npx swc --config-file .swcrc ./src -d dist",
        "start": "echo info: no start script for ts-core package... no worries... this is normal",
        "prepare": "pnpm copy-swc-config && pnpm build && pnpm lint && pnpm format && pnpm emitTypeDeclarations",
        "emitTypeDeclarations": "npx tsc --declaration --emitDeclarationOnly",
        "preversion": "pnpm prepare",
        "lint": "eslint './src/**/*.ts' --ext .ts",
        "lint:fix": "eslint './src/**/*.ts' --ext .ts --fix",
        "format": "prettier -c .",
        "format:fix": "prettier -c . -w",
        "version": "git add -A src",
        "postversion": "git push && git push --tags"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nyce/config/eslint.cjs"
    },
    "prettier": "@nyce/config/prettier.cjs",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NYCE-Software/config.git"
    },
    "keywords": [
        "nyce",
        "software",
        "nyce-software",
        "nycesoftware",
        "config",
        "configuration"
    ],
    "author": "NYCE Software",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/NYCE-Software/config/issues"
    },
    "homepage": "https://github.com/NYCE-Software/config#readme",
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@jest/types": "^29.6.3",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.101",
        "@types/eslint": "^8.44.9",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@types/supertest": "^2.0.16",
        "@types/validator": "^13.11.7",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-no-secrets": "^0.8.9",
        "eslint-plugin-no-unsanitized": "^4.0.2",
        "eslint-plugin-pii": "^1.0.2",
        "eslint-plugin-regexp": "^2.1.2",
        "eslint-plugin-require-extensions": "^0.1.3",
        "eslint-plugin-xss": "^0.1.12",
        "jest": "^29.7.0",
        "jest-config": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.3",
        "shx": "^0.3.4"
    },
    "dependencies": {
        "@nyce/config": "4.0.6"
    }
}
